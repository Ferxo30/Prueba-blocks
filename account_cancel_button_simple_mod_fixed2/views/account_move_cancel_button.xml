<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="account_move_form_add_cancel_button_simple_mod_fixed2" model="ir.ui.view">
    <field name="name">account_move_form_add_cancel_button_simple_mod_fixed2</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/header" position="inside">
        <button name="button_cancel"
        string="Cancelar"
        type="object"
        class="btn-danger"
        attrs="{'invisible': ['|', ('state','=','cancel'), ('move_type','not in', ('out_invoice','out_refund','in_invoice','in_refund'))]}"/>

      </xpath>
    </field>
  </record>
</odoo>
