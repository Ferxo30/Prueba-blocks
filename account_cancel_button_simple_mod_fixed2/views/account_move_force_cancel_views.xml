<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Add header button on account.move form -->
    <record id="view_move_form_force_cancel_button" model="ir.ui.view">
        <field name="name">account.move.form.force.cancel.button.fixed2</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_force_cancel_to_draft"
                        string="Forzar cancelar y volver a borrador"
                        type="object"
                        class="btn-secondary"
                        groups="account.group_account_manager"
                        attrs="{'invisible': [('state', '=', 'draft')]}"/>
            </xpath>
        </field>
    </record>
</odoo>