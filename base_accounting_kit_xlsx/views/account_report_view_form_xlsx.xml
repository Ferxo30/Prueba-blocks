<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_report_view_form_xlsx" model="ir.ui.view">
        <field name="name">account.report.view.form.xlsx</field>
        <field name="model">account.report</field>
        <field name="inherit_id" ref="base_accounting_kit.account_report_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//footer/button[@name='check_report']" position="after">
                <button name="check_report_xlsx"
                        string="Exportar a Excel"
                        type="object"
                        class="btn btn-secondary"
                        data-hotkey="x"/>
            </xpath>
        </field>
    </record>
</odoo>
