<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="cash_flow_report_view_xlsx" model="ir.ui.view">
        <field name="name">cash.flow.report.view.form.xlsx</field>
        <field name="model">cash.flow.report</field>
        <field name="inherit_id" ref="base_accounting_kit.cash_flow_report_view"/>
        <field name="arch" type="xml">
            <xpath expr="//footer/button[@name='check_report']" position="after">
                <button string="Export to Excel"
                        name="action_export_xlsx"
                        type="object"
                        class="btn-secondary"/>
            </xpath>
        </field>
    </record>
</odoo>
