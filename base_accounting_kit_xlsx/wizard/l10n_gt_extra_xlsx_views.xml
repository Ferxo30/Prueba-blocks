    <!-- Libro de Banco: a침adir bot칩n Excel al wizard -->
    <record id="asistente_reporte_banco_inherit_xlsx" model="ir.ui.view">
        <field name="name">l10n_gt_extra.asistente_reporte_banco.xlsx</field>
        <field name="model">l10n_gt_extra.asistente_reporte_banco</field>
        <field name="inherit_id" ref="l10n_gt_extra.asistente_reporte_banco"/>
