<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="blk_view_move_form_edit_lines" model="ir.ui.view">
        <field name="name">blk.account.move.view.form.edit.lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <!-- prioridad alta para que pise lo que trae account y base_accounting_kit -->
        <field name="priority">999</field>
        <field name="arch" type="xml">

            <!-- DEBITO editable solo en borrador -->
            <xpath expr="//field[@name='line_ids']/list/field[@name='debit']"
                   position="attributes">
                <!-- quitamos el readonly duro -->
                <attribute name="readonly">0</attribute>
                <!-- y controlamos solo con attrs -->
                <attribute name="attrs">
                    {'readonly': [('parent_state', '!=', 'draft')]}
                </attribute>
            </xpath>

            <!-- CREDITO editable solo en borrador -->
            <xpath expr="//field[@name='line_ids']/list/field[@name='credit']"
                   position="attributes">
                <attribute name="readonly">0</attribute>
                <attribute name="attrs">
                    {'readonly': [('parent_state', '!=', 'draft')]}
                </attribute>
            </xpath>

            <!-- CUENTA CONTABLE editable solo en borrador -->
            <xpath expr="//field[@name='line_ids']/list/field[@name='account_id']"
                   position="attributes">
                <!-- quitamos readonly="1" de la vista original -->
                <attribute name="readonly">0</attribute>
                <!-- la bloqueamos solamente cuando ya no es borrador -->
                <attribute name="attrs">
                    {'readonly': [('parent_state', '!=', 'draft')]}
                </attribute>
            </xpath>

        </field>
    </record>
</odoo>
