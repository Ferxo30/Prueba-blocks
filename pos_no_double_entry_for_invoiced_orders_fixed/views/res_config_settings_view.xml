<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="res_config_settings_view_form_pos_closing" model="ir.ui.view">
    <field name="name">res.config.settings.pos.closing.visibility</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">

      <!-- Insertamos nuestro bloque dentro del <form> principal de ajustes -->
      <xpath expr="//form" position="inside">
        <div class="app_settings_block" data-string="POS Closings Visibility" string="POS Closings Visibility">
          <h2>POS Closings Visibility</h2>
          <div class="row mt16 o_settings_container">

            <div class="col-12 col-lg-6 o_setting_box" groups="account.group_account_manager">
              <div class="o_setting_left">
                <label for="pos_closing_allowed_user_ids"/>
              </div>
              <div class="o_setting_right">
                <field name="pos_closing_allowed_user_ids"
                       widget="many2many_tags"
                       options="{'no_create': True, 'no_create_edit': True}"/>
                <div class="text-muted">
                  Users selected here will be allowed to see POS closing journal entries
                  whose number starts with <code>POSS/</code>. Other internal users will not
                  see those entries.
                </div>
              </div>
            </div>

          </div>
        </div>
      </xpath>

    </field>
  </record>
</odoo>
