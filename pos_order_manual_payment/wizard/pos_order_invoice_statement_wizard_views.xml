<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista FORM del wizard de facturación -->
    <record id="view_pos_order_invoice_statement_wizard" model="ir.ui.view">
        <field name="name">pos.order.invoice.statement.wizard.form</field>
        <field name="model">pos.order.invoice.statement.wizard</field>
        <field name="arch" type="xml">
            <form string="Estado de cuenta facturación POS">
                <group>
                    <group>
                        <field name="partner_id"/>
                        <field name="pos_config_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="show_only_pending"/>
                    </group>
                </group>
                <footer>
                    <button string="Imprimir estado de cuenta"
                            type="object"
                            name="action_print"
                            class="btn-primary"/>
                    <button string="Exportar a Excel"
                            type="object"
                            name="action_export_xlsx"
                            class="btn-secondary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del wizard -->
    <record id="action_pos_order_invoice_statement_wizard" model="ir.actions.act_window">
        <field name="name">Estado de cuenta facturación POS</field>
        <field name="res_model">pos.order.invoice.statement.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pos_order_invoice_statement_wizard"/>
        <field name="target">new</field>
    </record>

    <!-- Menú en Punto de venta -->
    <menuitem id="menu_pos_order_invoice_statement"
              name="Estado de cuenta facturación POS"
              parent="point_of_sale.menu_point_root"
              action="action_pos_order_invoice_statement_wizard"
              sequence="61"/>
</odoo>
