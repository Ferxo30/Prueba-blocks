<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_order_payment_wizard_form" model="ir.ui.view">
        <field name="name">pos.order.payment.wizard.form</field>
        <field name="model">pos.order.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar pago POS">
                <sheet>
                    <group>
                        <field name="pos_order_id" readonly="1"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="amount"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="payment_method_id"/>
                    </group>
                    <group>
                        <field name="note" colspan="4"/>
                    </group>
                </sheet>
                    <footer>
                        <button string="Registrar pago" type="object" name="action_confirm" class="btn-primary"/>
                        <button string="Cancelar" special="cancel" class="btn-secondary"/>
                    </footer>
            </form>
        </field>
    </record>
</odoo>
