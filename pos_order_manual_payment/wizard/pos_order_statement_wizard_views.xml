<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista FORM del wizard -->
    <record id="view_pos_order_statement_wizard" model="ir.ui.view">
        <field name="name">pos.order.statement.wizard.form</field>
        <field name="model">pos.order.statement.wizard</field>
        <field name="arch" type="xml">
            <form string="Estado de cuenta POS">
                <group>
                    <group>
                        <field name="partner_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="show_only_pending"/>
                    </group>
                </group>

                <!-- AQUÍ VAN LOS BOTONES DEL WIZARD -->
                <footer>
                    <!-- Llama al método action_print_report del wizard -->
                    <button string="Imprimir estado de cuenta"
                            type="object"
                            name="action_print_report"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción que abre el wizard COMO POP-UP -->
    <record id="action_pos_order_statement_wizard" model="ir.actions.act_window">
        <field name="name">Estado de cuenta POS</field>
        <field name="res_model">pos.order.statement.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pos_order_statement_wizard"/>
        <!-- ESTA LÍNEA es la que hace que sea wizard -->
        <field name="target">new</field>
    </record>

    <!-- Menú en Punto de venta -->
    <menuitem id="menu_pos_order_statement"
              name="Estado de cuenta POS"
              parent="point_of_sale.menu_point_root"
              action="action_pos_order_statement_wizard"
              sequence="60"/>
</odoo>
