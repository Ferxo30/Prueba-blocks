<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Inject internal sequence in the standard POS receipt -->
    <t t-name="pos_partner_code_and_pos_seq_fixed_v6.OrderReceipt.Inherit" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[@class='pos-receipt-amounts']" position="before">
            <div class="pos-receipt-internal-seq" t-if="props.order and props.order.pos_internal_seq">
                <span><strong>Correlativo interno:&nbsp;</strong></span>
                <span t-esc="props.order.pos_internal_seq"/>
            </div>
        </xpath>
    </t>
</templates>
