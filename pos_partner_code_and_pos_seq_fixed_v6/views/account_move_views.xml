<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Formulario de factura: muestra el campo -->
  <record id="view_move_form_inherit_pos_correlativo" model="ir.ui.view">
    <field name="name">account.move.form.pos.correlativo</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet//group" position="inside">
        <field name="pos_internal_seq" readonly="1"/>
      </xpath>
    </field>
  </record>

  <!-- Search: agrega campo al buscador -->
  <record id="view_move_search_inherit_pos_correlativo" model="ir.ui.view">
    <field name="name">account.move.search.pos.correlativo</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_account_move_filter"/>
    <field name="arch" type="xml">
      <xpath expr="//search" position="inside">
        <field name="pos_internal_seq" string="Correlativo POS"/>
      </xpath>
    </field>
  </record>
</odoo>